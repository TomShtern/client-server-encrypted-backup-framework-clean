{
  "python.venvPath": "${workspaceFolder}",
  "python.terminal.activateEnvironment": false,

  "python.defaultInterpreterPath": "${workspaceFolder}/flet_venv/Scripts/python.exe",

  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "FletVenv PowerShell": {
      "source": "PowerShell",
      "args": ["-NoExit", "-Command", "& '${workspaceFolder}\\flet_venv\\Scripts\\Activate.ps1'"],
      "icon": "terminal-powershell"
    }
  },
  "python.languageServer": "Pylance",
  "python.linting.enabled": true,
  "python.linting.ruffEnabled": true,
  "python.linting.flake8Enabled": false,
  "python.linting.isortEnabled": false,
  "python.formatting.blackEnabled": false,
  "python.analysis.ignore": [
    "**/archive/**",
    "FletV2/archive/**",
    "**/_legacy/**"
  ],

  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.envFile": "${workspaceFolder}/FletV2/.env",
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    },
    "editor.formatOnSave": true
  },

  "terminal.integrated.env.windows": {
    "PYTHONIOENCODING": "utf-8",
    "FLET_V2_DEBUG": "true"
  },

  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/node_modules": true,
    "logs": true,
    "**/*.txt": true,
    "archive": true,
    "**/archive/**": true,
    "_legacy": true,
    "**/_legacy/**": true
  },

  "problems.exclude": {
    "**/scripts/cmake/vcpkg_buildpath_length_warning.cmake": true,
    "**/archive/**": true,
    "archive/**": true,
    "FletV2/archive/**": true,
    "FletV2/**/archive/**": true,
    "**/_legacy/**": true,
    "_legacy/**": true
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "python-envs.pythonProjects": [
    {
      "path": "",
      "envManager": "ms-python.python:venv",
      "packageManager": "ms-python.python:pip"
    }
  ],
  "editor.experimentalGpuAcceleration": "on",

  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": "active",
  "sonarlint.pathToCompileCommands": "${workspaceFolder}\\vcpkg\\buildtrees\\pkgconf\\x64-windows-dbg\\compile_commands.json",
  "editor.fontSize": 17,
  "editor.minimap.sectionHeaderFontSize": 10,
  "debug.console.fontSize": 17,
  "scm.inputFontSize": 16,
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.fontSize": 17,
  "chat.editor.fontSize": 18,
  "chat.fontSize": 16,
  "markdown.preview.fontSize": 16,
  "tailwindCSS.rootFontSize": 17,
  "editor.mouseWheelZoom": true,
  "terminal.integrated.mouseWheelZoom": true,
  "chat.agent.thinking.collapsedTools": "readOnly",
  "chat.edits2.enabled": true,
  "chat.extensionUnification.enabled": false,
  "accessibility.openChatEditedFiles": true
}