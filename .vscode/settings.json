{
  "python.venvPath": "${workspaceFolder}/FletV2",
  "python.terminal.activateEnvironment": true,

  "terminal.integrated.defaultProfile.windows": "FletVenv PowerShell",
  "terminal.integrated.profiles.windows": {
    "FletVenv PowerShell": {
      "source": "PowerShell",
      "args": ["-NoExit", "-Command", "& '.\\FletV2\\flet_venv\\Scripts\\Activate.ps1'"],
      "icon": "terminal-powershell"
    }
  },
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.analysis.autoImportCompletions": true,
  "python.defaultInterpreterPath": "./FletV2/flet_venv/Scripts/python.exe",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.envFile": "${workspaceFolder}/.env",
  "terminal.integrated.env.windows": {
    "PYTHONIOENCODING": "utf-8",
    "CYBERBACKUP_DISABLE_INTEGRATED_GUI": "1",
    "CYBERBACKUP_DISABLE_GUI": "1",
    "FLET_V2_DEBUG": "true"
  },

  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/node_modules": true,
    "logs": true
  },

  "problems.exclude": {
    "**/scripts/cmake/vcpkg_buildpath_length_warning.cmake": true
  }
}