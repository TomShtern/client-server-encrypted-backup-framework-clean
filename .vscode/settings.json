{
  "python.venvPath": "${workspaceFolder}",
  "python.terminal.activateEnvironment": true,

  "terminal.integrated.defaultProfile.windows": "FletVenv PowerShell",
  "terminal.integrated.profiles.windows": {
    "FletVenv PowerShell": {
      "source": "PowerShell",
      "args": ["-NoExit", "-Command", "& '${workspaceFolder}\\flet_venv\\Scripts\\Activate.ps1'"],
      "icon": "terminal-powershell"
    }
  },
  "python.languageServer": "Pylance",
  "python.linting.enabled": true,
  "python.linting.ruffEnabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": false,
  "python.linting.isortEnabled": false,
  "python.formatting.blackEnabled": false,
  "python.analysis.autoImportCompletions": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.defaultInterpreterPath": "${workspaceFolder}/flet_venv/Scripts/python.exe",
  "python.envFile": "${workspaceFolder}/FletV2/.env",
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    },
    "editor.formatOnSave": true
  },
  "files.associations": {
    ".pylintrc": "plaintext",
    "*.pylintrc": "plaintext",
    "pylintrc": "plaintext",
    "pylintrc.txt": "plaintext"
  },
  "terminal.integrated.env.windows": {
    "PYTHONIOENCODING": "utf-8",
    "CYBERBACKUP_DISABLE_INTEGRATED_GUI": "1",
    "CYBERBACKUP_DISABLE_GUI": "1",
    "FLET_V2_DEBUG": "true"
  },

  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/node_modules": true,
    "logs": true,
    ".config-backup/pylintrc": true
  },

  "problems.exclude": {
    "**/scripts/cmake/vcpkg_buildpath_length_warning.cmake": true
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "python-envs.pythonProjects": [
    {
      "path": "",
      "envManager": "ms-python.python:venv",
      "packageManager": "ms-python.python:pip"
    }
  ]
}