{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Capture Client Web GUI (Integrated)",
			"type": "shell",
			"command": "${workspaceFolder}/flet_venv/Scripts/python.exe",
			"args": [
				"scripts/capture_client_web_gui.py",
				"--port",
				"9091",
				"--page",
				"NewGUIforClient.html"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "dedicated",
				"focus": true
			}
		},
		{
			"label": "Run Client Web GUI (static)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-Command",
				"$ErrorActionPreference='Stop'; cd '${workspaceFolder}/Client/Client-gui'; if (-not (Test-Path node_modules)) { echo 'Installing client web GUI dependencies...'; npm install --no-audit --no-fund }; echo 'Starting static client web GUI on http://localhost:9091'; npx http-server -p 9091 -c-1 ."
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "dedicated",
				"focus": false
			}
		},
		{
			"label": "Capture Client Web GUI (Playwright)",
			"type": "shell",
			"dependsOn": "Run Client Web GUI (static)",
			"command": "${workspaceFolder}/flet_venv/Scripts/python.exe",
			"args": [
				"test_web_gui.py",
				"http://localhost:9091"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "dedicated",
				"focus": false
			}
		},
		{
			"label": "Capture Client Web GUI (Playwright) - Direct",
			"type": "shell",
			"command": "${workspaceFolder}/flet_venv/Scripts/python.exe",
			"args": [
				"test_web_gui.py",
				"http://localhost:9091/NewGUIforClient.html"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "dedicated",
				"focus": true
			}
		},
		{
			"label": "Run FletV2 App in the browser WITHOUT server",
			"type": "shell",
			"command": "${workspaceFolder}/flet_venv/Scripts/python.exe",
			"args": [
				"main.py"
			],
			"options": {
				"cwd": "${workspaceFolder}/FletV2"
			},
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "Run Python Server",
			"type": "shell",
			"command": "${workspaceFolder}/flet_venv/Scripts/python.exe",
			"args": [
				"server/server.py"
			],
			"options": {
				"cwd": "${workspaceFolder}/python_server"
			},
			"group": "build"
		},
		{
			"label": "Run FletV2 App in browser WITH Python Server",
			"type": "shell",
			"dependsOn": [
				"Run Python Server"
			],
			"command": "${workspaceFolder}/flet_venv/Scripts/python.exe",
			"args": [
				"-m",
				"flet",
				"run",
				"main.py",
				"--web"
			],
			"options": {
				"cwd": "${workspaceFolder}/FletV2"
			},
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "Run FletV2 App(Desktop mode-NO browser) with Server (PS1)",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"c:\\Users\\tom7s\\Desktopp\\Claude_Folder_2\\Client_Server_Encrypted_Backup_Framework\\FletV2\\start_with_server.ps1"
			],
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "Lint Python Code",
			"type": "shell",
			"command": "${workspaceFolder}/flet_venv/Scripts/python.exe",
			"args": [
				"-m",
				"ruff",
				"check",
				"FletV2",
				"Shared",
				"python_server",
				"api_server"
			],
			"group": "test"
		},
		{
			"label": "Format Python Code",
			"type": "shell",
			"command": "c:\\Users\\tom7s\\Desktopp\\Claude_Folder_2\\Client_Server_Encrypted_Backup_Framework\\flet_venv\\Scripts\\python.exe",
			"args": [
				"-m",
				"ruff",
				"format",
				"FletV2",
				"Shared",
				"python_server",
				"api_server"
			],
			"group": "test"
		}
	]
}