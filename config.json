{
  "server": {
    "host": "127.0.0.1",
    "port": 1256,
    "max_connections": 10,
    "buffer_size": 8192,
    "timeout": 30,
    "enable_logging": true,
    "log_level": "INFO",
    "database_path": "data/database/defensive.db",  # Managed by unified config
    "received_files_dir": "received_files",
    "keys_dir": "data/keys"
  },
  "api_server": {
    "host": "127.0.0.1",
    "port": 9090,
    "debug": false,
    "max_content_length": 16777216,
    "upload_timeout": 300,
    "enable_cors": true
  },
  "crypto": {
    "rsa_key_size": 2048,
    "aes_key_size": 256,
    "private_key_file": "priv.key",
    "public_key_file": "valid_public_key.der",
    "keys_dir": "data/keys",
    "enable_compression": true
  },
  "protocol": {
    "version": 3,
    "max_filename_length": 200,
    "max_payload_size": 1048576,
    "crc_polynomial": 79764919,
    "header_timeout": 10,
    "chunk_size": 65536
  }
}