{
  "python.defaultInterpreterPath": "${workspaceFolder}\\flet_venv\\Scripts\\python.exe",
  "python.terminal.activateEnvironment": true,
  "python.linting.enabled": false,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": false,
  // extraPaths controlled by pyrightconfig.json
  "python.autoComplete.extraPaths": [
    "${workspaceFolder}\\..",
    "${workspaceFolder}\\..\\Shared",
    "${workspaceFolder}\\utils",
    "${workspaceFolder}\\views",
    "${workspaceFolder}"
  ],
  // analysis behavior is configured in pyrightconfig.json
  "python.terminal.useEnvFile": true,
  "pylance.openFilesOnly": true,
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}\\..;${workspaceFolder}\\..\\Shared;${env:PYTHONPATH}"
  },
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}/..;${workspaceFolder}/../Shared;${env:PYTHONPATH}"
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/flet_venv": false
  },
  "search.exclude": {
    "**/node_modules": true,
    "logs": true,
    "**/flet_venv": true,
    "**/flet_venv/**": true
  },
  "search.searchView.semanticSearchBehavior": "runOnEmpty",
  "chat.math.enabled": true,
  "chat.checkpoints.showFileChanges": true,
  "chat.agent.maxRequests": 40,
  "inlineChat.notebookAgent": true,
  "chat.agentSessionsViewLocation": "view",
  "chat.mcp.serverSampling": {
    "FletV2/.vscode/mcp.json: fetch": {
      "allowedModels": [
        "copilot/gpt-4.1",
        "copilot/gpt-5-mini",
        "copilot/grok-code-fast-1"
      ]
    }
  },
  "github.copilot.nextEditSuggestions.enabled": true
}